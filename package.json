{
  "name": "oh-my-vscode",
  "displayName": "海拉鲁编程客的 vscode 配置",
  "description": "好的配置拷贝在身边,一用好多年",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./ && cp -r ./themes ./snippets ./syntaxes dist",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "activationEvents": [
    "onCommand:omv.quickInput",
    "onCommand:omv.panguFormat",
    "onCommand:omv.sayHello"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
      }
    },
    "configuration": {
      "title": "OhMyVSCode",
      "type": "object",
      "properties": {
        "multiRootSample.statusColor": {
          "type": [
            "string"
          ],
          "default": "#FFFFFF",
          "description": "Color to use for the status bar item. Can be set per workspace folder.",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "omv.sayHello",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "bookmarks.toggle",
          "group": "bookmarks",
          "when": "editorTextFocus && config.bookmarks.showCommandsInContextMenu"
        },
        {
          "command": "bookmarks.jumpToNext",
          "group": "bookmarks@1",
          "when": "editorTextFocus && config.bookmarks.showCommandsInContextMenu"
        },
        {
          "command": "bookmarks.jumpToPrevious",
          "group": "bookmarks@1",
          "when": "editorTextFocus && config.bookmarks.showCommandsInContextMenu"
        }
      ]
    },
    "commands": [
      {
        "command": "omv.sayHello",
        "title": "OMV: sayHello",
        "category": "OMV"
      },
      {
        "command": "omv.panguFormat",
        "title": "OMV: Pangu Reformat",
        "category": "OMV"
      },
      {
        "command": "omv.quickInput",
        "title": "OMV: Quick Input",
        "category": "OMV"
      }
    ],
    "themes": [
      {
        "label": "Darcula Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/darcula-dark-color-theme.json"
      },
      {
        "label": "Darcula Light",
        "uiTheme": "vs-dark",
        "path": "./themes/darcula-light-color-theme.json"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/injection.json",
        "scopeName": "todo-comment.injection",
        "injectTo": [
          "source.py",
          "source.js"
        ]
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "nodeDependencies",
          "name": "Node Dependencies",
          "when": "workspaceHasPackageJSON",
          "icon": "media/dep.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codestream-activitybar",
          "title": "CodeStream",
          "icon": "assets/images/codestream.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scm",
        "contents": "In order to use git features, you can open a folder containing a git repository or clone from a URL.\n[Open Folder](command:vscode.openFolder)\n[Clone Repository](command:git.clone)\nTo learn more about how to use git and source control in VS Code [read our docs](https://aka.ms/vscode-scm).",
        "when": "config.git.enabled && git.state == initialized && workbenchState == empty"
      }
    ]
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.0",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2"
  }
}
