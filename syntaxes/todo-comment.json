{
  "scopeName": "todo-comment.injection",
  "injectionSelector": "L:comment.line",
  "patterns": [
    {
      "include": "#todo-keyword"
    },
    {
      "include": "#warning-keyword"
    },
    {
      "include": "#note-keyword"
    },
    {
      "include": "#fixme-keyword"
    }
  ],
  "repository": {
    "todo-keyword": {
      "match": "TODO:",
      "name": "keyword.todo"
    },
    "warning-keyword": {
      "match": "WARNING:",
      "name": "keyword.warning"
    },
    "note-keyword": {
      "match": "NOTE:",
      "name": "keyword.note"
    },
    "fixme-keyword": {
      "match": "FIXME:",
      "name": "keyword.fixme"
    }
  }
}
